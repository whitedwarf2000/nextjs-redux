{
  "name": "nextjs-redux",
  "version": "1.0.0",
  "description": "Base Next JS config with Redux",
  "main": "index.js",
  "engines": {
    "node": ">=10.15.3",
    "yarn": ">=1.16.0"
  },
  "scripts": {
    "build:desktop": "cross-env NODE_ENV=production VIEWPORT_ENV=desktop next build",
    "build:mobile": "cross-env NODE_ENV=production VIEWPORT_ENV=mobile next build",
    "dev:desktop": "cross-env NODE_ENV=development VIEWPORT_ENV=desktop PORT=8080 node ./server/app.js src",
    "dev:mobile": "cross-env NODE_ENV=development VIEWPORT_ENV=mobile PORT=8181 node ./server/app.js src",
    "start": "cross-env NODE_ENV=production node ./server/app.js",
    "test:unit": "cross-env NODE_ENV=test jest --coverage",
    "test": "npm run test:unit",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "npm run lint:js",
    "lint:fix": "eslint src --fix",
    "prettier": "prettier --config .prettierrc \"./**/*.+(js|json|jsx)\" --write",
    "clean:example": "rnb --c",
    "analyze": "cross-env BUNDLE_ANALYZE=both npm run build"
  },
  "author": "Son Le",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "./**/*.+(js|json|jsx)": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@next/bundle-analyzer": "^9.4.4",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-sass": "^1.0.1",
    "axios": "^0.20.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-proxy-middleware": "^0.20.0",
    "immer": "^7.0.9",
    "next": "^10.0.7",
    "next-compose-plugins": "^2.2.0",
    "next-routes": "^1.4.2",
    "next-runtime-dotenv": "^1.3.0",
    "node-sass": "^4.14.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "signale": "^1.4.0",
    "styled-components": "^4.3.2",
    "webpack": "^4.45.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@r-next-b/cli": "^0.1.1",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.3",
    "@testing-library/react-hooks": "^4.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "babel-plugin-styled-components": "^1.12.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.17.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.7",
    "jest-cli": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.1",
    "redux-devtools-extension": "^2.13.8"
  }
}
